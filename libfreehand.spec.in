%define name libfreehand
%define version @VERSION@
%define RELEASE 1
%define release     %{?CUSTOM_RELEASE} %{!?CUSTOM_RELEASE:%RELEASE}

Name: %{name}
Summary: Library for importing and converting FreeHand Documents
Version: %{version}
Release: %{release}
Source: %{name}-%{version}.tar.gz
Group: System Environment/Libraries
URL: http://libfreehand.sf.net/
BuildRoot: %{_tmppath}/%{name}-%{version}-buildroot
BuildRequires: libwpd-devel >= 0.9.0, gcc-c++, libstdc++-devel, pkgconfig >= 0.9.0
License: LGPL
Prefix: %{prefix}

%description
libfreehand is a library for reading and converting FreeHand Documents

%package tools
Requires: libfreehand
Summary: Tools to convert FreeHand Documents into other formats
Group: Applications/Publishing

%description tools
Tools to convert FreeHand Documents into other formats.
Currently supported: raw svg

%package devel
Requires: %{name} >= %{version}
Requires: libwpd-devel >= 0.9.0
Summary: Files for developing with libfreehand.
Group: Development/Libraries

%description devel
Includes and definitions for developing with libfreehand.

%if %{!?_without_docs:1}%{?_without_docs:0}
%package docs
Requires: %{name} >= %{version}
BuildRequires: doxygen
Summary: Documentation of libfreehand API
Group: Development/Documentation

%description docs
Documentation of libfreehand API for developing with libfreehand
%endif

%prep
%__rm -rf $RPM_BUILD_ROOT

%setup -q -n %{name}-%{version}

%build
%configure --prefix=%{_prefix} --libdir=%{_libdir} \
        --enable-shared --disable-static \
        %{?_with_debug:--enable-debug}  \

%__make

%install
umask 022

%__make DESTDIR=$RPM_BUILD_ROOT install
%__rm -rf $RPM_BUILD_ROOT/%{_libdir}/libfreehand*.la

%clean
%__rm -rf $RPM_BUILD_ROOT $RPM_BUILD_DIR/file.list.%{name}

%files
%defattr(644,root,root,755)
%{_libdir}/libfreehand*.so.*

%files tools
%defattr(755,root,root,755)
%{_bindir}/fh2*

%files devel
%defattr(644,root,root,755)
%{_libdir}/libfreehand*.so
%{_libdir}/pkgconfig/libfreehand*.pc
%{_includedir}/libfreehand-@FH_MAJOR_VERSION@.@FH_MINOR_VERSION@/libfreehand

%if %{!?_without_docs:1}%{?_without_docs:0}
%files docs
%{_datadir}/*
%endif

%changelog
